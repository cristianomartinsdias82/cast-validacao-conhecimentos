@model ManterContaViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Titulo"];
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <form method="post" asp-action="Manter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">@Localizer["RotuloCampoNome"]</label>
                <input type="text" asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["RotuloCampoDescricao"]</label>
                <input type="text" asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <hr/>
            <div>
                <input onclick="return confirm('@Localizer["ConfirmacaoSalvarOsDadosConta"]')" type="submit" asp-action="Manter" class="btn btn-primary" value="@Localizer["RotuloBotaoSalvar"]" />
                <a asp-action="Index" class="btn btn-outline-primary">@Localizer["RotuloBotaoVoltar"]</a>
            </div>
        </form>
    </div>
</div>